{% extends 'base.html.twig' %}

{% block title %}Hello ArticleController!{% endblock %}

{% block body %}
    <main class="articleView">
        <h1 class="articleView__title">{{ article.title }}</h1>
        <img 
            src="{{ asset('images/articles/') ~ article.cover }}" 
            alt="image de l'artiicle {{ article.title }}"
            class="articleView__img"
        >
        <p class="articleView__date">{{ article.createdAt | date('d/m/Y') }}</p>
        <p class="articleView__content">{{ article.content }}</p>
        <button class="articleView__button">
            <a href="{{ path('homepage') }}" class="articleView__button__link">retour Ã  la page d'accueil</a>
        </button>
    </main>
{% endblock %}
